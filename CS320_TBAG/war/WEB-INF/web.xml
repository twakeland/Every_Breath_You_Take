<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>GamePageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.TBAG.servlet.GamePageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StartPageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.TBAG.servlet.StartPageServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>GamePageServlet</servlet-name>
    <url-pattern>/gamePage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StartPageServlet</servlet-name>
    <url-pattern>/startPage</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
